create table Athletes(
Name varchar(30),
NOC varchar(30),
Discipline varchar(30)
);

create table Coaches(
Name varchar(30),
NOC varchar(30),
Discipline varchar(30),
Event varchar(30)
);

create table EntriesGender(
Discipline	varchar(30),
Female int,
Male int,
Total int
);

create table Medals(
TRank	int,
NOC varchar(30),
Gold int,
Silver int,
Bronze int,
Total int,
Trank_by_Total int
);

create table Teams(
Name varchar(30),
Discipline varchar(30),
NOC varchar(30),
Event varchar(30)
);
select * from Medals m ;
select * from Teams t ;

--number of athlets participated in tokyo olympic 2021
select distinct count(a.Name )
from Athletes a ;


--athletes who won gold
SELECT a.Name 
from Athletes a ,Medals m 
 

select * from Athletes a ;

CREATE view combine as
select *
from Athletes a,EntriesGender eg ,Coaches c ,Medals m ,Teams t 
where a.Discipline = eg.Discipline AND eg.Discipline = t.Discipline and t.Discipline =c.Discipline and c.NOC = m."Team/NOC" ;

select * from combine ;

drop view combine ;

select * from Athletes a ;

CREATE view combine as
select *
from Athletes a,EntriesGender eg ,Coaches c ,Medals m ,Teams t 
where a.Discipline = eg.Discipline AND eg.Discipline = t.Discipline and t.Discipline =c.Discipline and c.NOC = m."Team/NOC" ;